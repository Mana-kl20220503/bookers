<div class = "books-list">
  <h1>Books</h1>
    <table>

  <tr>
    <th>Title</th> <th>Body</th>  <th> </th>
  </tr>


<% @books.each do |book| %>
  <tr>

    <td><%=book.title %></td>
    <td><%=book.body %></td>
    <td class ="a"><%= link_to "Show", book_path(book.id) %><%= link_to "Edit", edit_book_path(book.id) %><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure？" %></td>

  </tr>
<% end %>


</table>
</div>


<div class="new-book-form">
  <h1>New Book</h1>
  <div class="error">
    <% if @book.present? && @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

</div>

<!-- form_with部分 -->
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <div class="form"><%= f.text_field :title %></div>

  <h4>Body</h4>
  <div class = "form2"><%= f.text_area :body %></div>

  <div class = "button"><br><%= f.submit 'Create Book' %></div>
<% end %>

</div>
